@{
}

@model Games

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Game</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ESRB"></label>
            <input asp-for="ESRB" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Platform"></label>
            <input asp-for="Platform" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
        </div>


        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save-fill"></i> Update
        </button>

        <a asp-controller="Home" asp-action="GameView" class="btn btn-secondary">
            Game Library
        </a>
    </div>

</form>