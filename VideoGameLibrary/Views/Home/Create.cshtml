@model Games

<form asp-controller="Home" asp-action="Create" method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create A Game
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ESRB"></label>
            <input asp-for="ESRB" class="form-control" />
            <span asp-validation-for="ESRB" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Platform"></label>
            <input asp-for="Platform" class="form-control" />
            <span asp-validation-for="Platform" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="alert-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            Create Game
        </button>
        <a asp-controller="Home" asp-action="GameView"
           class="btn btn-secondary">
            Game List
        </a>
    </div>

</form>
